<UserControl x:Class="NewsAppWPF.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewsAppWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Label Content="Name:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Name}" Padding="5"/>

        <Label Content="Email:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Email}" Padding="5"/>

        <Label Content="Subscription Type:" FontWeight="Bold"/>
        <TextBlock Text="{Binding SubscriptionType}" Padding="5"/>

        <Button Content="Edit" Command="{Binding EditCommand}" Margin="10"/>
    </StackPanel>
</UserControl>
